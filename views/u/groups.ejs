<script>
	$(document).ready(function(){
		$("#change_group").click( function (){
			if ( !$('input:radio[name=g_id]:checked').val() ){
				alert('First select a Group.');
				return false;
			} else {
				$('#changeGroupForm').submit();
				return false;
			}
		});
	});
