					<div class="clearheight"></div>
					<form method="post" action="/u/groups/changeGroup" id="changeGroupForm">
						<input type="hidden" name="token" value="YRNCG3PBFP">
						<div class="table">
							<div class="row overall">
								<div class="col-span-4">
									Select Group:
								</div>
							</div>
							<%foundGroups.forEach((g,i)=>{%>
							<div class="row">
								<div class="col-span-05 radio-icon">
									<input id="gid_<%=g._id%>" type="radio" name="g_id" value="<%=g._id%>">
								</div>
								<div class="col-span-99">
									<label for="gid_<%=g._id%>"><%=g.group_name%></label>
								</div>
							</div>
							<%})%>

							
